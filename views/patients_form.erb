<h1>Add a Patient</h1>

<div class="container">
  <form action="/doctors/<%= params.fetch('id') %>" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" placeholder="e.g. Hungry Hector">
    </div>

    <div class="form-group">
      <label for="birthday">Birthday</label>
      <input type="text" name="birthday" placeholder="e.g. Thanksgiving">
    </div>

    <button class="btn btn-primary btn-lg active">Add Patient</button>
  </form>
</div>
